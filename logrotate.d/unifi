/opt/unifi/log/*.log {
    weekly
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    dateext
    dateformat .%Y%m%d
    copytruncate
}

/opt/unifi/log/remote/*.log {
    size 5M
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    dateext
    dateformat .%Y%m%d
    copytruncate
}
